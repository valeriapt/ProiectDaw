<main class="main-content">
    <div class="container-fluid photos">
        <div class="row justify-content-center">

            <div class="col-md-8 pt-4">

                <div class="row">
                    <div class="col-md-12" data-aos="fade-up">
                        <div class="d-flex blog-entry align-items-start">
                            <div class="mr-5 img-wrap">
                                <a href="#"><img src="@Url.Content(Model.ProfileImagePath)" alt="Image" class="img-fluid"></a>
                            </div>
                            <div>
                                <h4 class="mt-0 mb-2"><a href="#">About me</a></h4>
                                <div class="meta mb-3">Last name: @Model.LastName</div>
                                <div class="meta mb-3">First name: @Model.FirstName</div>
                                <div class="meta mb-3">Age: @Model.Age</div>
                            </div>
                            <a class="btn btn-sm btn-info" href="/Profile/Edit/@Model.Id"> Edit profile </a>

                            @if (ViewBag.IsAdmin == true)
                            {
                                <a class="btn btn-sm btn-success" href="/Categories/Index">See categories</a>
                            }
                            else
                            {
                                <h3>Albums</h3>

                                <a href="/Picture/Add" class="btn btn-primary" role="button">Add photo</a>
                                <a href="/Album/New" class="btn btn-primary" role="button">Add album</a>
                                <a href="/Like/Index" class="btn btn-primary" role="button">View liked photos</a>
                                <div>

                                    @foreach (proiectDaw.Models.Albums item in ViewBag.Albums)
                                    {
                                        // merge doar ca nu am facut controllerul la albume si nu are ce sa arata ( tabela e goala)
                                        <h4><a href="/Album/Show/@item.Id" class="btn btn-info" role="button">@item.Name</a></h4>
                                        <div class="row">

                                            @foreach (proiectDaw.Models.Pictures pic in item.Pictures)
                                            {
                                                <!--  aici ar trebui puse poze-->

                                                @Html.Partial("PhotoThumbnail", pic);

                                            }
                                        </div>
                                    }

                                </div>
                            }

                        </div>


                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</main>




<div class="col-sm-6 col-md-4">
    <div class="thumbnail">
        <img src="@Url.Content(@Model.ImagePath)" onclick="location.href ='@Url.Action("Show", "Picture", new { id = Model.Id })'; return false;">
        <div class="caption">
            <h3>@Model.Name</h3>
            <p>@Model.Description</p>2
            <p class="navbar-text navbar-right">@Model.Date</p>
            <p><a href="/Categories/Show/@Model.CategoryId" class="btn btn-primary" role="button">@Model.Category.Name</a></p>
        </div>
    </div>
</div>


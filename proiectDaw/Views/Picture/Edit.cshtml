@model proiectDaw.Models.Pictures

@{
	ViewBag.Title = "Show";
}




<h2>@Html.DisplayFor(model => model.Name) </h2>
<h3>Edit photo</h3>

	<form method="post" action="/Picture/GetImage/@Model.Id">
	@Html.AntiForgeryToken()
	<input type="hidden" name="photoId" id="photoId" value=@Model.Id> </input>
	<table border="0" cellpadding="0" cellspacing="5">
		<tr>
			<td valign="top" rowspan="10">
				<img src="@Url.Content(Model.ImagePath)" width=" 400" height="400" />
			</td>
			<td valign="middle">
				<input type="checkbox" name="HorizontalFlip" id="HorizontalFlip" value="1" />
				Flip horizontally
			</td>
		</tr>
		<tr>
			<td valign="middle">
				<input type="checkbox" name="VerticalFlip" id="VerticalFlip" value="true" />
				Flip vertically
			</td>
		</tr>
		<tr>
			<td valign="middle">
				<input type="checkbox" name="RotateLeft" id="RotateLeft" value="true" />
				Rotate left
			</td>
		</tr>
		<tr>
			<td valign="middle">
				<input type="checkbox" name="RotateRight" id="RotateRight" value="true" />
				Rotate right
			</td>
		</tr>

		<tr>

			<td>
			<button class="btn btn-sm btn-success" type="submit">Save</button>

		</tr>
	</table>








	<p>
		@Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
		@Html.ActionLink("Back to List", "Index")
	</p>

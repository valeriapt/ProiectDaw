<main class="main-content">
    <div class="container-fluid photos">

        <div class="row justify-content-center">
            <div class="col-md-6 pt-4">
                <figure class="mb-5" data-aos="fade-up">
                    <img src="@Url.Content(Model.ImagePath)" alt="Image" class="img-fluid">
                </figure>


                @if (ViewBag.Liked == false)
                {
                    <form method="post" action="/Like/New/@Model.Id">
                        <input type="hidden" name="photoId" id="photoId" value=@Model.Id> </input>
                        <button class="btn btn-sm btn-success" type="submit">Like</button>
                    </form>
                }
                @if (ViewBag.Liked == true)
                {
                    <form method="post" action="/Like/Delete/@ViewBag.LikeId">
                        @Html.HttpMethodOverride(HttpVerbs.Delete)
                        <button class="btn btn-sm btn-success" type="submit">Unlike</button>
                    </form>
                }
                @if (ViewBag.CanEdit == true)
                {
                    <div class="input-group " role="group" aria-label="...">
                        <form method="post" action="/Picture/Edit/@Model.Id">
                            <button class="form-control" type="submit">Edit</button>
                        </form>
                        <form method="post" action="/Picture/Delete/@Model.Id">
                            @Html.HttpMethodOverride(HttpVerbs.Delete)
                            <button class="form-control" type="submit">Delete</button>
                        </form>
                    </div>
                }


                <div class="row" data-aos="fade-up">
                    <h4 class="text-white mb-4" data-aos="fade-up">Category: @Html.DisplayFor(model => model.Category.Name)</h4>
                </div>
                <div class="row" data-aos="fade-up">
                    <h4 class="text-white mb-4" data-aos="fade-up">@Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(model => model.Description)</h4>
                </div>
                <div class="row" data-aos="fade-up">
                    <h4 class="text-white mb-4" data-aos="fade-up">@Html.DisplayNameFor(model => model.Album.Name): @Html.DisplayFor(model => model.Album.Name)</h4>
                </div>
                <div class="row" data-aos="fade-up">
                    <h4 class="text-white mb-4" data-aos="fade-up">@Html.DisplayNameFor(model => model.Date): @Html.DisplayFor(model => model.Date)</h4>
                </div>



            </div>
        </div>

        @if (TempData.ContainsKey("message"))
        {
            <h3 class="alert alert-info" role="alert">@ViewBag.message</h3>
        }
        <div class="row" data-aos="fade-up">
            <h3 class="text-white mb-4" data-aos="fade-up">Comments:</h3>
        </div>

        @foreach (proiectDaw.Models.Comments item in ViewBag.Comments)
        {
            <div class="row">


                <div class="panel panel-default">
                    <div class="panel-heading">
                        @item.CreatedBy
                        <span class="label label-success"> @item.CreatedAt </span>
                        @if (item.userId == ViewBag.Userid || ViewBag.IsAdmin == true)
                        {

                            <form method="post" action="/Comments/Delete/@item.Id">
                                @Html.HttpMethodOverride(HttpVerbs.Delete)
                                <button class="btn btn-sm btn-danger" type="submit">Delete comment</button>
                            </form>
                            <a class="btn btn-sm btn-info" href="/Comments/Edit/@item.Id">Modify comment</a>
                        }
                    </div>

                    <div class="panel-body">
                        <strong>@item.Text</strong>
                        <br />

                        <br />
                    </div>
                </div>
                <br />

            </div>
        }

        <form method="post" action="/Comments/New/@Model.Id">
            @Html.TextBox("Text", null)
            <span class="field-validation-valid text-danger"
                  data-valmsg-for="Text"
                  data-valmsg-replace="true">
            </span>
            <input type="hidden" name="photoId" id="photoId" value=@Model.Id> </input>
            <button class="btn btn-sm btn-success" type="submit">Add Comment</button>
        </form>
    </div>
</main>





